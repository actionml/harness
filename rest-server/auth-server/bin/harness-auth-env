#!/usr/bin/env bash

export AUTH_SERVER_HOST=${AUTH_SERVER_HOST:-localhost}
export AUTH_SERVER_PORT=${AUTH_SERVER_PORT:-9099}

export AUTH_MONGO_HOST=${AUTH_MONGO_HOST:-localhost}
export AUTH_MONGO_PORT=${AUTH_MONGO_PORT:-27017}

export AUTH_LOG_CONFIG="${HARNESS_AUTH_HOME}/conf/logback.xml"
export AUTH_LOG_PATH="${HARNESS_AUTH_HOME}/logs"

export HARNESS_AUTH_SERVER_PROTECTED=${HARNESS_AUTH_SERVER_PROTECTED:-false}

# Reset
NC='\033[0m'           # Text Reset

# Regular Colors
RED='\033[0;31m'          # Red
GREEN='\033[0;32m'        # Green
YELLOW='\033[0;33m'       # Yellow
BLUE='\033[0;34m'         # Blue
PURPLE='\033[0;35m'       # Purple
CYAN='\033[0;36m'         # Cyan
WHITE='\033[0;37m'        # White

LINE="=================================================================="

GLINE="${GREEN}${LINE}"
RLINE="${LINE}${NC}"
