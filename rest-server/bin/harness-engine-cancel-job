#!/usr/bin/env bash

. "$(cd "`dirname "$0"`"; pwd)/common.sh"

ENGINE_ID=$1
JOB_ID=$2

if [ -z "$ENGINE_ID" ]; then
    echo -e "${RED}Engine resource id not specified!${NC}"
    echo -e "Expected command: ${CYAN}harness cancel <engine-id> <job-id>${NC}"
    exit 1
fi
if [ -z "$JOB_ID" ]; then
    echo -e "${RED}Job id not specified!${NC}"
    echo -e "Expected command: ${CYAN}harness cancel <engine-id> <job-id>${NC}"
    exit 1
fi

PYTHON_ARGS="cancel -e $ENGINE_ID -j $JOB_ID ${USER_ARGS}"

${HARNESS_HOME}/bin/engines.py $PYTHON_ARGS
