#!/usr/bin/env bash

. "$(cd "`dirname "$0"`"; pwd)/common.sh"

case "$1" in
    *) RESOURCE_ID=$1 ;;
esac

shift

if [ -z "$RESOURCE_ID" ]; then
    echo -e "${RED}Engine resource id not specified!${NC}"
    echo -e "Expected command: ${CYAN}harness train <engine-id>${NC}"
    exit 1
fi

PYTHON_ARGS="train $RESOURCE_ID  ${USER_ARGS}"

${HARNESS_HOME}/bin/engines.py $PYTHON_ARGS
