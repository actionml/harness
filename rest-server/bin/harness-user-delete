#!/usr/bin/env bash

. "${HARNESS_HOME}/bin/harness-env"

case "$1" in
    *) USER_ID=$1
        shift
        EXTRA_PARAM=$1
        if [ ! -z "$EXTRA_PARAM" ]; then
            echo -e "${RED}Too many parameters for command${NC}"
            echo -e "Expected command: ${CYAN}harness user-delete <user-id>${NC}"
        fi
        ;;
esac


if [ -z "$USER_ID" ]; then
    echo -e "${RED}User-id not specified${NC}"
    echo -e "Expected command: ${CYAN}harness user-delete <user-id>${NC}"
    exit 1
fi

PYTHON_ARGS="user-delete -u $USER_ID $USER_ARGS"

#echo -e "${CYAN}Run ${HARNESS_HOME}/bin/users.py ${PYTHON_ARGS}${NC}"

${HARNESS_HOME}/bin/users.py ${PYTHON_ARGS}
