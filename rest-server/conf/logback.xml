    <logger name="com.actionml" level="INFO"/>
    <logger name="com.mongodb" level="INFO"/>
    <logger name="org.mongodb" level="INFO"/>
    <logger name="com.typesafe" level="INFO"/>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </root>
</configuration>
